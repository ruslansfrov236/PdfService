<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Test</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Test.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar ">
            <a id="logo" href="/">Person Project</a>

            <ul class="navbar-menu" >
                <li><a class="nav-link" href="/person/create">Create Person Information</a></li>
                <li>
                    <form asp-controller="Home" asp-action="Filter" method="get">

                        <input class="search" type="text" name="search" placeholder="Search by name..." />


                        <button class="btn-search";type="submit">Search</button>
                    </form>

                </li>
            </ul>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/9df1d44044.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
